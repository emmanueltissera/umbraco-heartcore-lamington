@model NavigationViewModel
@inject DictionaryService DictionaryService

<div class="et_top_header_wrapper float_left">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6 col-12 ">
                <div class="et_left_side_wrapper">
                    <div class="et_top_contect">
                        <p>
                            <i class="fa fa-envelope"></i>  <a href="#">@Model.Root.LocaleEmailAddress</a>
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-6 ">
                <div class="et_right_side_main_warpper">
                    <div class="et_right_side_warpper">
                        <ul>
                            <li class="hidden-xs">
                                <div class="plumb_top_socialicon">
                                    <ul>
                                        <li>
                                            <a href="#"><i class="fab fa-facebook-square"></i></a>
                                        </li>
                                        <li>
                                            <a href="#"><i class="fab fa-twitter-square"></i></a>
                                        </li>
                                        <li>
                                            <a href="#"><i class="fab fa-pinterest-square"></i></a>
                                        </li>
                                        <li>
                                            <a href="#"><i class="fab fa-instagram"></i></a>
                                        </li>
                                        @foreach (var culture in DictionaryService.Languages)
                                        {
                                            <li>
                                                <a href="@culture.Value">
                                                    @culture.Key
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="ck_navigation_main_wrapper ck_navigation_inner_main_wrapper float_left">
    <div class="container">
        <div class="ck_menu_inner float_left">
            @if (Model.IsHomePage)
            {
                <div class="ck_top_life_effect"></div>
            }
            <div class="ck_logo_wrapper ck_logo_wrapper_inner">
                <a href="@Model.Root.Url">
                    <img src="@Model.Root.LocaleLogo.Url" alt="@Model.Root.LocaleLogo.Name">
                </a>
            </div>
            <div class="ck_navigation_right_wrapper">
                <div class="main main--demo-3">
                    <div class="content content--demo-3">
                        <div class="hamburger hamburger--demo-3 js-hover hamburger_inner">
                            <div class="hamburger__line hamburger__line--01">
                                <div class="hamburger__line-in hamburger__line-in--01"></div>
                            </div>
                            <div class="hamburger__line hamburger__line--02">
                                <div class="hamburger__line-in hamburger__line-in--02"></div>
                            </div>
                            <div class="hamburger__line hamburger__line--03">
                                <div class="hamburger__line-in hamburger__line-in--03"></div>
                            </div>
                            <div class="hamburger__line hamburger__line--cross01">
                                <div class="hamburger__line-in hamburger__line-in--cross01"></div>
                            </div>
                            <div class="hamburger__line hamburger__line--cross02">
                                <div class="hamburger__line-in hamburger__line-in--cross02"></div>
                            </div>
                        </div>
                        <div class="global-menu">
                            <div class="global-menu__wrap" id='cssmenu'>
                                @if (Model.NavigationItems.Any())
                                {
                                    <ul>
                                        @foreach (var item in Model.NavigationItems)
                                        {
                                            <li><a class="global-menu__item global-menu__item--demo-3" href="@item.Url">@item.Title</a></li>
                                        }
                                    </ul>
                                }
                            </div>
                        </div>
                        <svg class="shape-overlays" viewBox="0 0 100 100" preserveAspectRatio="none">
                            <path class="shape-overlays__path" d="M 0 100 C 50 100 50 100 100 100 V 100 H 0"></path>
                            <path class="shape-overlays__path" d="M 0 100 C 50 100 50 100 100 100 V 100 H 0"></path>
                            <path class="shape-overlays__path" d="M 0 100 C 50 100 50 100 100 100 V 100 H 0"></path>
                        </svg>
                    </div>
                </div>
                <div class="ck_login_btn">
                    <a href="#" data-toggle="modal" data-target="#myModal"><i class="flaticon-log-in"></i></a>
                </div>
                <div class="buss_cart_section_wrapper">
                    <div class="buzz_cart">
                        <ul>
                            <li class="buzz_cart_dropdown">
                                <a href="#"><i class="flaticon-shopping-bag"></i> <span>3</span></a>
                                <ul>
                                    <li>
                                        <div class="cc_cart_wrapper1 menu-button float_left">
                                            <div class="cc_cart_img_wrapper">
                                                <img src="/images/ft1.jpg" alt="cart_img" />
                                            </div>
                                            <div class="cc_cart_cont_wrapper">
                                                <h4><a href="#">product name</a></h4>
                                                <p>Quantity : 2 × $45</p>
                                                <h5>$90</h5>
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            </div>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="cc_cart_wrapper1 menu-button float_left">
                                            <div class="cc_cart_img_wrapper">
                                                <img src="/images/ft2.jpg" alt="cart_img" />
                                            </div>
                                            <div class="cc_cart_cont_wrapper">
                                                <h4><a href="#">product name</a></h4>
                                                <p>Quantity : 2 × $45</p>
                                                <h5>$90</h5>
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            </div>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="cc_cart_wrapper1 menu-button float_left">
                                            <div class="cc_cart_img_wrapper">
                                                <img src="/images/ft3.jpg" alt="cart_img" />
                                            </div>
                                            <div class="cc_cart_cont_wrapper">
                                                <h4><a href="#">product name</a></h4>
                                                <p>Quantity : 2 × $45</p>
                                                <h5>$90</h5>
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            </div>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="buzz_cart_btn">
                                            <a href="#">checkout</a>
                                        </div>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="mainmenu d-xl-block d-lg-block d-md-block d-sm-none d-none">
                    @if (Model.NavigationItems.Any())
                    {
                        <ul class="main_nav_ul">
                            @foreach (var item in Model.NavigationItems)
                            {
                                <li class="has-mega gc_main_navigation"><a class="gc_main_navigation" href="@item.Url">@item.Title</a></li>
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
